{
  "name": "Hupper",
  "description": "",
  "manifest_version": 2,
  "version": "0.0.6",
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "logo.png",
      "48": "logo.png"
    },
    "default_popup": "popup.html"
  },
  "options_page": "settings.html",
  "background": {
    "scripts": ["background.js", "hr.js"],
    "persistent": true
  },
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["https://hup.hu/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["https://hup.hu/*"],
      "js": ["tailwind.js"],
      "run_at": "document_idle"
    }
  ]
}
